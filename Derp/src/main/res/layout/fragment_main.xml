<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity$PlaceholderFragment">

    <TextView
        android:text="Enter your account information to get started."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/client_id"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:hint="User ID" />
    <EditText
        android:id="@+id/api_key"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:hint="API Key" />
    <EditText
        android:id="@+id/api_secret"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:hint="API Secret" />
    <Button
        android:id="@+id/submit_button"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="Sign In"/>
    <TextView
        android:id="@+id/help_text"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginTop="20dp"
        android:text="Go to https://www.bitstamp.net/account/security/api to set up your shit."/>
</LinearLayout>
